<h1 class="tasks-title">タスク一覧</h1>
<div class="tasks-index-container">
  <table border="1" class="tasks-index-table">
    <thead>
      <tr>
        <th colspan="3">タスク名</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td class="tasks-index-table__td"><%= task.title %></td>
          <td class="tasks-index-table__td"><%= link_to '編集', edit_task_path(task) %></td>
          <td class="tasks-index-table__td"><%= link_to '削除', task_path(task), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
  <%= link_to '追加', new_task_path, class: 'tasks-index-add-link' %>
</div>